<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InfluxDBWebApp</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InfluxDBWebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar -->
        <div class="bg-light border-end" id="sidebar">
            <div class="sidebar-toggle">
                <button class="btn btn-primary" id="menu-toggle">
                    ☰
                </button>
            </div>
            <div class="sidebar-links">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" asp-area="" asp-page="/Index">
                            <i class="bi bi-house-door-fill"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-page="/Privacy">
                            <i class="bi bi-shield-lock-fill"></i> About Me
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Page Content -->
        <div id="page-content-wrapper" class="flex-grow-1">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    @* <footer class="footer mt-auto py-3 bg-light shadow-sm" id="footer">
        <div class="container text-center">
            <span>&copy; 2025 InfluxDBWebApp | <a asp-area="" asp-page="/Privacy">Privacy</a></span>
        </div>
    </footer> *@

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
